{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "build",
        "declaration": true,
        "moduleResolution": "node",
        "jsx": "react"
    },
    "files": [".ts", ".tsx"],
    "include": ["./src/**/*.tsx"],
    "exclude": ["node_modules", "build", "./src/**/*.test.ts"]
}
